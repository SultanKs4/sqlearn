            "name": "BE Dev Assessment",
            "envFile": "${workspaceFolder}/backend-assessment/.env",
            "cwd": "${workspaceFolder}/backend-assessment",
            "command": "npm run dev",
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "BE Dev Web",
            "envFile": "${workspaceFolder}/backend-web/.env",
