    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program Backend Assessment",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "envFile": "${workspaceFolder}/backend-assessment/.env",
            "program": "${workspaceFolder}/backend-assessment/app.js"
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "Run NPM Dev Backend Web",
            "envFile": "${workspaceFolder}/sultan/backend-web/.env",
            "cwd": "${workspaceFolder}/sultan/backend-web",
            "command": "npm run dev",
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "Run npm test backend assessment",
            "cwd": "${workspaceFolder}/backend-assessment",
            "command": "npm test",
        }
    ]
}